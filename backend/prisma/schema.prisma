generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  BASE
  ADMIN
}

model User {
  id String @id @default(uuid())
  nama String @unique
  email String @unique
  password String
  role UserRole
  employer Employer?
}

enum EmployerRegistrationStatus {
  ACCEPTED
  NEED_REVISION
  PENDING
}

enum Position {
  PARTNER
  SENIOR_MANAGER
  MANAGER
  ASSISTANT_MANAGER
  SENIOR_SPECIALIST
  SPECIALIST
  ADMIN
}

enum SertificationStatus {
  A
  B
  C
  NOT_A_TAX_CONSULTANT
}

model Employer {
  id String @id @default(uuid())
  nama String
  status_registrasi EmployerRegistrationStatus @default(PENDING)
  jabatan Position
  status_sertifikasi SertificationStatus
  status_kuasa_hukum Boolean
  izin_berlaku_pengacara DateTime?
  izin_berlaku_konsultan DateTime?
  user User @relation(fields: [userId], references: [id])
  userId String @unique
}